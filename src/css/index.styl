@import 'main'

#primary
  width: 100%
  height: 100vh

  canvas
    display: block
    vertical-align: bottom

  #particles-js
    width: 100%
    height: 100%
    color: #fff
    position: absolute
    background-image: url("../assets/map.svg")
    background-size: cover
    background-repeat: no-repeat
    background-position: 50% 50%

  svg
    fill: #fff
    width: 250px
    height: 75px
    max-width: 50%

  h1
    width: 100%
    max-width: 600px
    margin: auto
    border-top: solid 1px #999
    margin-top: 30px
    padding-top: 30px
    font-size: 32px
    position: relative

  #arrow
    position: absolute
    bottom: 10%
    left: 50%
    transform: translate(-50%, 0%)

    span
      display: block
      width: 30px
      height: 30px
      border-bottom: 1px solid #fff
      border-right: 1px solid #fff
      transform: rotate(45deg)
      margin: -10px
      animation: animate 6s infinite

    span:nth-child(2)
      animation-delay: -0.2s

    span:nth-child(3)
      animation-delay: -0.4s

  @keyframes animate
    0%
      opacity: 0
    30%
      opacity: 0
      transform: rotate(45deg) translate(-20px,-20px)
    50%
      opacity: 1
    70%
      opacity: 0
      transform: rotate(45deg) translate(20px,20px)
    100%
      opacity: 0

#secondary
  height: 100vh
  position: relative
  margin: auto
  width: 100%
  max-width: 500px
  padding: 40px 0

  p
    text-align: justify

  button
    background-color: #000
    position: relative
    margin: 20px
    border: 1px solid #9aff60
    border-radius: 30px
    padding: 20px
    color: #9aff60
    cursor: pointer

    &:hover
      background-color: #222

  a
    color: #fff
    text-align: center
    text-decoration: none
    position: absolute
    bottom: 0
    left: 0
    right: 0
