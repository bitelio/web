@import 'main'

#primary
  width: 100%
  height: 100vh

  canvas
    display: block
    vertical-align: bottom

  #particles-js
    width: 100%
    height: 100%
    color: #fff
    position: absolute
    background-image: url("../assets/map.svg")
    background-size: cover
    background-repeat: no-repeat
    background-position: 50% 50%

  svg
    fill: #fff
    width: 250px
    height: 75px
    max-width: 50%

  h1
    width: 100%
    max-width: 600px
    margin: auto
    border-top: solid 1px #999
    margin-top: 30px
    padding-top: 30px
    font-size: 32px
    position: relative
